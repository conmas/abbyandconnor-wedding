mixin breadcrumbs
	a.breadcrumbs(href='/') &lsaquo; Back

mixin footer
	p.footer
	| Â© 2019 Taxi Buddies. 
	a(href='README.md') About &rsaquo;

mixin venue(name, label, url, time, address)
	tr
		td
			a(href=url, target='_blank') 
				span=label 
				span &#8203; &rsaquo;
		td 
			a(href=url, target='_blank')
				span.venue=name 
				span &#8203; &nearr;
	tr
		td=time
		td=address
	tr
		td &#8203;
		td &#8203;
	tr
		td &#8203;
		td &#8203;

mixin photo(href, name)
	.photo(style=href, alt=name)
		span= name